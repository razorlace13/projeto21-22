<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_backgound"
    tools:context=".profile.ProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayoutProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:hapticFeedbackEnabled="false"
            android:scaleType="fitCenter"
            android:src="@drawable/porfile_icon"
            app:shapeAppearanceOverlay="@style/roundimageview" />

        <TextView
            android:id="@+id/tv_nome_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_numero_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="TextView"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_nif_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="TextView"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_mesa_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="TextView"
            android:textSize="48sp" />

        <Button
            android:id="@+id/bt_Purchases_p2"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"

            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Button"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>